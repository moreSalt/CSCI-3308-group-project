<%- include ('../partials/head') %>
    <%- include ('../partials/menu') %>

        <!DOCTYPE html>
        <html lang="en">

        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Home Page</title>
            <style>
                h4 {text-align: center;}
                h5 {text-align: center;}
            </style>
        </head>

        <body>
            <!-- <h1>Welcome to Marvel Comic Reviews</h1> -->
            <div class="col">
                <%- include ('../partials/message') %>
            </div>

            <div class="col-auto">
                <h5>Remember your favorite Comic ID's to get to them faster!</h5>
            </div>

            <div class="col-auto">
                <%- include ('../partials/search') %>
            </div>

            <div class="col-auto">
                <h4>Review Feed: </h4>
            </div>

            <div class="container">
                <% reviews.forEach((review)=>{  %>
                <div class="card mt-2">
                    <div class="card-body">
                        <div class="container ">
                            <div class="row">
                                <div class="col">
                                    <h3 class="card-title"><%= review.title %></h3>
                                </div>
                                <div class="col-7">

                                </div>
                                <div class="col">
                                    <div class="row">
                                        <h6 class="card-title text-end">Comic: <%= review.comic_name %></h6>
                                    </div>
                                    <div class="row">
                                        <h6 class="card-title text-end"> @<%= review.username %></h6>
                                    </div>
                                    <div class="row">
                                        <h6 class="card-title text-end">Rating: <%= review.rating %></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p class="card-text"><%= review.review %></p>
                        <a href="/comics/<%= review.comic_id %>" class="btn btn-primary">Check it out</a>
                    </div>
                </div>
            <% }) %>

            </div>




        </body>

        </html>
        <%- include ('../partials/footer') %>