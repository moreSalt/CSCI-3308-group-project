<%- include ('../partials/head') %> 
<%- include ('../partials/menu') %>
<%- include ('../partials/message') %>

<main>
    <div class="container">
        <div class="d-flex justify-content-between gap-4">
            <img src="<%= locals.data.image %>" class="img-thumbnail w-25 rounded" alt="...">
            <div>
                <h1><%= locals.data.title %></h1>
                <p><%= locals.data.description %></p>
            </div>
        </div>

        <div class="d-flex gap-4 mt-4 p-4 rounded bg-secondary text-light">
            <% for(let i = 0; i < locals.reviews.length; i++) { %>
                <div>
                    <h3><%= locals.reviews[i].title %></h3>
                    <p><%= locals.reviews[i].description %></p>
                </div>
            <% } %>
        </div>
    </div>
  </main>


